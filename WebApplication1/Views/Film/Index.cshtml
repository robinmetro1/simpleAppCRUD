
@model List<Film>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Films List
            </h2>
        </div class="col-6 text-end" >
        <a asp-controller="Film" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Create New Film</a>

    </div>
<table class="table table-bordered ">
   <thead>
    <tr>

        <th>
            Film Title
        </th>
        <th>Category</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
        <tr>
                <td>@obj.Title</td>
                <td>@obj.Category</td> 
                <td >
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Film" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </td>
                   <td >
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Film" asp-action="Delete"  asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                           <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>

                    
        </tr>
        }
    </tbody>

</table>
</div>