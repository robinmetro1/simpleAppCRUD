@model Film

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Film</h2>

        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Category"></label>
            <input asp-for="Category" type="text" class="form-control"  disabled/>
        </div>

        <div class="col-6">
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>

        </div>
        <div class="col-6">

            <a asp-controller="Film" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">Back to List</a>
        </div>

    </div>


</form>